{
  "name": "toran",
  "version": "1.0.0",
  "description": "API Gateway as a Service on Cloudflare Workers",
  "private": true,
  "workspaces": [
    "proxy",
    "admin",
    "shared"
  ],
  "scripts": {
    "dev:proxy": "npm run dev --workspace=proxy",
    "dev:admin": "npm run dev --workspace=admin",
    "deploy:proxy": "npm run deploy --workspace=proxy",
    "deploy:admin": "npm run deploy --workspace=admin",
    "deploy:all": "npm run deploy:proxy && npm run deploy:admin",
    "build": "npm run build --workspaces --if-present",
    "setup:mongodb": "node scripts/setup-mongodb.js",
    "seed:data": "node scripts/seed-data.js",
    "setup:all": "npm run setup:mongodb && npm run seed:data"
  },
  "devDependencies": {
    "mongodb": "^7.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
