# MongoDB Configuration
# For Cloudflare Worker, use MongoDB Data API (REST-based)
# Set these as secrets using: wrangler secret put SECRET_NAME

# MongoDB Data API URL (get from MongoDB Atlas: Data API section)
# Format: https://data.mongodb-api.com/app/<app-id>/endpoint/data/v1
MONGODB_API_URL=https://data.mongodb-api.com/app/your-app-id/endpoint/data/v1

# MongoDB Data API Key (generate in MongoDB Atlas: Data API section)
MONGODB_API_KEY=your-api-key-here

# Database name
MONGODB_DATABASE=toran

# Collection names (optional, defaults in code)
MONGODB_COLLECTION_MAPPINGS=mappings
MONGODB_COLLECTION_LOGS=logs

# MongoDB Data Source name (usually "Cluster0" or your cluster name)
MONGODB_DATA_SOURCE=Cluster0

# ==========================================
# For Admin Webapp (Cloudflare Pages Functions)
# Use direct MongoDB connection string
# ==========================================

# MongoDB Connection String (for webapp backend)
# Format: mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/

# Admin API Key (for protecting admin endpoints)
ADMIN_API_KEY=your-admin-api-key-here

# Environment
ENVIRONMENT=development
